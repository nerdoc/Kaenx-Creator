                        <RowDefinition Height="Auto" />
                        <RowDefinition MaxHeight="500" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="HeaderedContentControl">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="ListView">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                        </StackPanel.Resources>
                        <HeaderedContentControl Header="{x:Static p:Resources.tpub_filter}">
                            <TextBox x:Name="ExportInFilter" TextChanged="ExportInFilter_TextChanged" />
                        </HeaderedContentControl>

                        <CheckBox x:Name="InPublishOnlyLatest" Content="{x:Static p:Resources.tpub_onlynew}" Checked="ChangedPublishOnlyLatest" Unchecked="ChangedPublishOnlyLatest" />
                    </StackPanel>

                    <DataGrid Grid.Row="1" Name="ExportList" CanUserAddRows="False" AutoGenerateColumns="False" BorderThickness="0 0 1 0">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="{x:Static p:Resources.tpub_publish}" Binding="{Binding Selected}" />
                            <DataGridTextColumn Header="{x:Static p:Resources.tpub_device}" Binding="{Binding Device.Name}" IsReadOnly="True" />
                            <DataGridTextColumn Header="{x:Static p:Resources.tpub_hardware}" Binding="{Binding Hardware.Name}" IsReadOnly="True" />
                            <DataGridTextColumn Header="{x:Static p:Resources.tpub_app}" Binding="{Binding App.Name}" IsReadOnly="True" />
                            <DataGridTextColumn Header="{x:Static p:Resources.tpub_vers}" Binding="{Binding Version.NameText}" IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2">
                        <StackPanel.Resources>
                            <Style TargetType="HeaderedContentControl">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                            <Style TargetType="ListView">
                                <Setter Property="Margin" Value="5" />
                            </Style>
                        </StackPanel.Resources>
                        <ComboBox x:Name="InPublishTarget" SelectedIndex="0" SelectedValuePath="Tag" Visibility="Collapsed">
                            <ComboBoxItem Content="ETS" Tag="ets" />
                            <ComboBoxItem Content="Kaenx" Tag="kaenx" IsEnabled="False" />
                        </ComboBox>
                        
                        <HeaderedContentControl Header="{x:Static p:Resources.tpub_filename}">
                            <TextBox x:Name="ExportInName" Text="output" />
                        </HeaderedContentControl>

                        <Button Content="{x:Static p:Resources.tpub_publish}" Click="Button_Click" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="3">
                        <ItemsControl ItemsSource="{Binding PublishActions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="0 1 0 0">
                                        <StackPanel Margin="10 5">
                                            <TextBlock Text="{Binding Text}" Foreground="{Binding State, Converter={StaticResource StateToBrush}}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <Grid x:Name="LogoGrid" Grid.Row="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition Height="auto" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>

            <TextBlock FontSize="25" HorizontalAlignment="Center" Text="{x:Static p:Resources.main_l1}" Margin="20" />

            <TextBlock FontSize="17" HorizontalAlignment="Center" Grid.Row="1">
                <Run Text="{x:Static p:Resources.main_l2}" />
                <LineBreak />
                <Run Text="{x:Static p:Resources.main_l3}" />
            </TextBlock>

            <TextBlock Grid.Row="3" HorizontalAlignment="Center">
                <Run Text="{x:Static p:Resources.main_l4}" />
                <LineBreak />
                <Run Text="{x:Static p:Resources.main_l5}" />
                <Hyperlink NavigateUri="https://github.com/OpenKNX" RequestNavigate="Hyperlink_RequestNavigate">Github</Hyperlink>
            </TextBlock>

            <Image Grid.Row="4" Source="Assets\Images\OpenKNX.png" Margin="10" />
        </Grid>
    </Grid>
</Window>
